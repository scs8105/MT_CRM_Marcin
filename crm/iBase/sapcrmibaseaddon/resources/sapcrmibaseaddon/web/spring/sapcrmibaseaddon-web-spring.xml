<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd
           http://www.springframework.org/schema/mvc 
           http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">
           
	<context:annotation-config />


	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/my-company/installed-base*/**"/>
            <bean id="webContentInterceptor" class="org.springframework.web.servlet.mvc.WebContentInterceptor">
				<property name="cacheSeconds" value="0" />
				<property name="useExpiresHeader" value="true" />
				<property name="useCacheControlHeader" value="true" />
				<property name="useCacheControlNoStore" value="true" />
			</bean>
		</mvc:interceptor>
	</mvc:interceptors>

	<!-- Expose /acceleratoraddon/web/webroot/WEB-INF/messages/base.js.properties 
		resource bundle as javascript variables -->
	<bean id="defaultSapcrmibaseaddonJavaScriptMessageResourceAccessor"
		parent="abstractJavaScriptMessageResourceAccessor">
		<property name="addOnName" value="sapcrmibaseaddon" />
	</bean>

	<bean id="defaultSapcrmibaseaddonBeforeViewJsPropsHandlerAdaptee"
		parent="abstractBeforeViewJsPropsHandlerAdaptee"
		class="de.hybris.platform.addonsupport.interceptors.ExportJsPropertiesBeforeViewHandler">
		<property name="messageSource"
			ref="defaultSapcrmibaseaddonJavaScriptMessageResourceAccessor" />
	</bean>

	<bean id="getSapcrmibaseaddonBeforeViewHandler" parent="beforeViewHandlerAdapter">
		<property name="adaptee">
			<ref bean="defaultSapcrmibaseaddonBeforeViewJsPropsHandlerAdaptee" />
		</property>
	</bean>
	<bean id="SapcrmibaseaddonBeforeViewHandlerListMergeDirective"
		depends-on="beforeViewHandlersList" parent="listMergeDirective">
		<property name="add" ref="getSapcrmibaseaddonBeforeViewHandler" />
	</bean>
	<bean id="sapcrmiBasePageController"
		class="com.sap.hybris.crm.sapcrmibaseaddon.controllers.pages.AccountInstalledBasePageController" />

</beans>
